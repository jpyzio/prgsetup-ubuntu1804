alias wanip='dig +short myip.opendns.com @resolver1.opendns.com'

confirm() {
    while true; do
        echo -e "\n\e[32m"
        read -r -p "${1:-Are you sure? [y]es/[n]o} " RESPONSE
        echo -e "\e[39m"
        case ${RESPONSE} in
        [yY][eE][sS]|[yY])
            return 0;
            ;;
        [nN][oO]|[nN])
            return 1;
            ;;
        *)
            echo -e '\e[31mInvalid input, type "y", "yes", "n" or "no"\e[39m';
            ;;
        esac
    done
}
